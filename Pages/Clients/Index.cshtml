@page
@model TaskManagement.Pages.Clients.IndexModel
@{
}

<br>
<h2>List of Tasks</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'> New Task</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tugas</th>
            <th>Deskripsi</th>
            <th>Deadline</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.address</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
